{
  "name": "rushingfly-blog",
  "version": "1.0.0",
  "description": "Charles Wang's blog.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "docs:build": "vuepress build src",
    "docs:clean-dev": "vuepress dev src --clean-cache",
    "docs:dev": "yarn cp && vuepress dev src",
    "docs:update-package": "yarn dlx vp-update",
    "cp": "mkdir -p src/zh && cp -f -r src/posts src/README.md src/zh/"
  },
  "devDependencies": {
    "@vuepress/client": "2.0.0-beta.66",
    "vue": "^3.2.47",
    "vuepress": "2.0.0-beta.66",
    "vuepress-theme-hope": "2.0.0-beta.234"
  }
}
